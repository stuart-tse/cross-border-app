# Database
DATABASE_URL="postgresql://username:password@localhost:5432/crossborder_db"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# File Storage
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,application/pdf"

# Maps API (Amap/Gaode)
AMAP_API_KEY="your-amap-api-key"
AMAP_SECRET="your-amap-secret"

# Payment Gateways
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
WECHAT_PAY_APP_ID="your-wechat-app-id"
WECHAT_PAY_SECRET="your-wechat-secret"
ALIPAY_APP_ID="your-alipay-app-id"
ALIPAY_PRIVATE_KEY="your-alipay-private-key"

# SMS Service (for notifications)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# WeChat Integration
WECHAT_APP_ID="your-wechat-mini-program-app-id"
WECHAT_APP_SECRET="your-wechat-mini-program-secret"

# External APIs
CURRENCY_API_KEY="your-currency-exchange-api-key"
WEATHER_API_KEY="your-weather-api-key"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Cloud Storage (optional - for production file uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Application Settings
NODE_ENV="development"
PORT=3000
SITE_URL="http://localhost:3000"
ADMIN_EMAIL="admin@crossborder-services.com"

# Rate Limiting
RATE_LIMIT_MAX=100  # requests per window
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Feature Flags
ENABLE_BLOG=true
ENABLE_REAL_TIME_TRACKING=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_SMS_NOTIFICATIONS=false